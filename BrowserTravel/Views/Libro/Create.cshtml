@model BrowserTravel.Entities.Libro

<h1>Crear Libro</h1>
<hr />
<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="ISBN" class="control-label"></label>
        <input asp-for="ISBN" class="form-control" />
        <span asp-validation-for="ISBN" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Editorial" class="control-label"></label>
        <select asp-for="Editorial.Id" asp-items="@(new SelectList(ViewBag.Editoriales, "Id", "NombreCompleto"))" class="form-control"></select>
        <span asp-validation-for="Editorial" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Titulo" class="control-label"></label>
        <input asp-for="Titulo" class="form-control" />
        <span asp-validation-for="Titulo" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Sinopsis" class="control-label"></label>
        <textarea asp-for="Sinopsis" class="form-control"></textarea>
        <span asp-validation-for="Sinopsis" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="N_paginas" class="control-label"></label>
        <input asp-for="N_paginas" class="form-control" />
        <span asp-validation-for="N_paginas" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Autores:</label>
        <select asp-for="AutoresLibros" asp-items="@(new SelectList(ViewBag.Autores, "Id", "NombreCompleto"))" class="form-control" multiple></select>
        <span asp-validation-for="AutoresLibros" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Crear" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
